<view>
  <image class="image-login" src="../../images/loginLog.jpeg" mode="scaleToFill"></image>
</view>
<view class="weui-cells weui-cells_after-title">
  <view class="weui-cell weui-cell_input">
    <view class="weui-cell__hd">
      <view class="weui-label">手机号</view>
    </view>
    <view class="weui-cell__bd">
      <input class="weui-input" confirm-type="done" type="text" placeholder="请输入手机号"  bindinput="mobileInput"/>
    </view>
  </view>
  <view class="weui-cell weui-cell_input weui-cell_vcode">
    <view class="weui-cell__hd">
      <view class="weui-label">验证码</view>
    </view>
    <view class="weui-cell__bd">
      <input class="weui-input"  confirm-type="done"  type="text" placeholder="请输入验证码" bindinput="veryCodeInput" />
    </view>
    <view class="weui-cell__ft">
      <button class="weui-vcode-btn" type="primary"  disabled="{{disable}}" bindtap="getVeryCode">{{veryCodeInfo}}</button>
    </view>
  </view>
</view>

<view class="weui-btn-area">
  <button class="weui-btn" type="primary" bindtap="login">登录</button>
</view>